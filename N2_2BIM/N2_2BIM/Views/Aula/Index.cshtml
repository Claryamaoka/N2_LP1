@model X.PagedList.IPagedList<AulaViewModel>
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*TELA DE LISTAGEM DE AULAS*@

<head>
    <link rel="stylesheet" href="~/css/ListagemDeAlunos.css">
</head>

<body>

    <div id="listagem">

        <h1>Listagem de Treinos</h1>

        <br />

        <div class="row">
            <div class="div">
                <label>Nome do Aluno</label>
                <input type="text" id="nomeAlunoAula" class="form-control" />
            </div>

            <div class="div">
                <label>Data do Treino </label>
                <input type="date" id="dataAula" class="form-control" />
            </div>

            <div class="div">
                <br />
                <input type="button" onclick="efetuaFiltroAula()" class="btn btn-success" value="Aplicar" id="btnAplicar" />
                &nbsp;
                <img src="~/images/wait.gif" width="50" id="imgWait" style="display:none" />

            </div>

            <a href="/Aula/create">Novo Treino</a>

        </div>

 

        @*----------------------------------------------------------------------------------------------------------------------*@



        <div id="conteudoGrid">
            @{
                Html.RenderPartial("pvGrid", Model);
            }
        </div>

    </div>

</body>