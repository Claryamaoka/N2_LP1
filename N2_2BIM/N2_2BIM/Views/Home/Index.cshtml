@{
    ViewData["Title"] = "Home Page";
}
@*TELA INICIAL*@
<input type="hidden" name="AlunoInstrutor" value="@ViewBag.AlunoInstrutor" />


@*Validar com viewbag se é aluno ou instrutor*@

@if (ViewBag.AlunoInstrutor == "I")
{
    <a href="/Aluno/Create" class="btn btn-secondary">Cadastrar Aluno</a>
    <a href="/Aluno/Index" class="btn btn-secondary">Listar Alunos</a>
    <a href="/Exercicio/Create" class="btn btn-secondary">Cadastrar Exercicio</a>
    <a href="/Aula/Create" class="btn btn-secondary">Cadastrar Aula</a>
    <a href="/Instrutor/Edit" class="btn btn-secondary">Editar Usuário</a>
}
else
{
    <a href="/Aluno/Edit" class="btn btn-secondary">Editar Usuário</a>
}
<a href="/Exercicio/Index" class="btn btn-secondary">Listar Exercicios</a>
